%section#rendez-vous
  .container
    .content
      %p#notice= notice
      %h1.title.has-text-primary.has-text-centered.has-lines
        PRENEZ RENDEZ-VOUS
      %table
        %thead
          %tr
            %th Name
            %th Start time
            %th Email
            %th Phone
            %th{:colspan => "3"}
        %tbody
          - @bookings.each do |booking|
            %tr
              %td= booking.name
              %td= booking.start_time
              %td= booking.email
              %td= booking.phone
              %td= link_to 'Show', booking
              %td= link_to 'Edit', edit_booking_path(booking)
              %td= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' }
      %br/
      = link_to 'New Booking', new_booking_path, class: "button is-primary"

  = render 'calendar', booking: @booking
