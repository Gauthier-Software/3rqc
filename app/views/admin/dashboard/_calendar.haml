
.container
  .simple-calendar
    - @bookings = Booking.all
    = week_calendar events: @bookings do |date, bookings|
      = date
      - bookings.each do |booking|
        %div
          .booking-information
            %strong= booking.start_time.strftime("%H:%M")
            %br
            = "Nom: " + booking.name
            %br
            - if booking.phone?
              = "Tel.: " + booking.phone
              %br
            = "Email: " + booking.email
            %br
            = link_to "Modifier", edit_admin_booking_path(booking)
            = link_to "Supprimer", admin_booking_path(booking), method: :delete, data: {confirm: "Êtes-vous sûr?"}
