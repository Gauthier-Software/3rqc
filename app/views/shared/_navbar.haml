%nav.navbar.is-primary{"aria-label": "main navigation", role: "navigation"}
  .container
    .navbar-brand
      = link_to '3R QUÉBEC', root_path, class: 'navbar-item'

      %a.navbar-burger.burger{"aria-expanded": "false", "aria-label": "menu", data: { target: "main-navbar" }, role: "button" }
        %span{"aria-hidden" => "true"}
        %span{"aria-hidden" => "true"}
        %span{"aria-hidden" => "true"}

    #main-navbar.navbar-menu
      .navbar-start
        = link_to 'Accueil', root_path(anchor: 'accueil'), class: 'navbar-item'
        = link_to 'Partenaires', root_path(anchor: 'partenaires'), class: 'navbar-item'
        = link_to 'C.A.', ca_path, class: 'navbar-item'
        = link_to 'Distribution', root_path(anchor: 'distribution'), class: 'navbar-item'

      .navbar-end
        - if user_signed_in?
          = link_to edit_user_registration_path, class: 'navbar-item' do
            %i.fas.fa-user
            &nbsp;
            Mon compte
          = link_to destroy_user_session_path, method: :delete, class: 'navbar-item' do
            %i.fas.fa-sign-out-alt
            &nbsp;
            Se déconnecter
        - else
          = link_to new_user_session_path, class: 'navbar-item' do
            %i.fas.fa-sign-in-alt
            &nbsp;
            Se connecter
